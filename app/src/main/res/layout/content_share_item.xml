<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ShareItemActivity"
    tools:showIn="@layout/activity_share_item">

    <TextView
        android:id="@+id/text_view_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_900"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textColor="@color/red_50"
        android:visibility="gone" />

    <include android:id="@+id/include_regular_item" layout="@layout/merge_share_item_regular" />

    <include android:id="@+id/include_response_item" layout="@layout/merge_share_item_response" />

</LinearLayout>
