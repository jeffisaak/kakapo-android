<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectUserAccountActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </com.google.android.material.appbar.AppBarLayout>

    <include android:id="@+id/includes" layout="@layout/content_select_user_account"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_new_account_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_add_24"
        android:tint="@android:color/white"/>

    <com.aptasystems.kakapo.view.FloatingActionLabel
        android:id="@+id/add_new_account_label"
        style="@style/floating_action_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fal_margin_bottom"
        android:layout_marginEnd="@dimen/fal_margin_right"
        android:alpha="0"
        android:text="@string/select_user_account_action_add_new_account"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_from_backup_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_question_mark_24"
        android:tint="@android:color/white"/>

    <com.aptasystems.kakapo.view.FloatingActionLabel
        android:id="@+id/add_from_backup_label"
        style="@style/floating_action_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fal_margin_bottom"
        android:layout_marginEnd="@dimen/fal_margin_right"
        android:alpha="0"
        android:text="@string/select_user_account_action_add_account_from_backup"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_from_another_device_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_photo_camera_24"
        android:tint="@android:color/white"/>

    <com.aptasystems.kakapo.view.FloatingActionLabel
        android:id="@+id/add_from_another_device_label"
        style="@style/floating_action_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fal_margin_bottom"
        android:layout_marginEnd="@dimen/fal_margin_right"
        android:alpha="0"
        android:text="@string/select_user_account_action_add_account_from_another_device"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_floating_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_add_24"
        android:tint="@android:color/white"
        app:layout_behavior=".behaviour.FloatingActionButtonBehaviour"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>