<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@drawable/recycler_view_item_background"
             android:descendantFocusability="blocksDescendants">

    <FrameLayout
        android:layout_marginStart="64dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/popup_menu_anchor"/>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="8dp"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/layout_queued_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include
                layout="@layout/merge_queued"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_submitting_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include
                layout="@layout/merge_submitting"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/layout_error_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include
                layout="@layout/merge_error"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_queued_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/text_view_queued_item_timestamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ellipsize="end"-->
            <!--android:maxLines="1"-->
            <!--android:text="The attachment is too large"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium"-->
            <!--android:textColor="@color/colorAccent"/>-->

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
