<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout android:id="@+id/layout_coordinator"
                                                 xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent"
                                                 tools:context=".fragment.FriendListFragment">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/showcase_view_anchor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollbars="vertical"/>

    <TextView
        android:id="@+id/fragment_friend_list_text_view_no_items"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text="@string/fragment_friends_label_no_friends"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_add_from_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_photo_camera_24"
        android:tint="@android:color/white"/>

    <com.aptasystems.kakapo.view.FloatingActionLabel
        android:id="@+id/floating_label_add_from_qr_code"
        style="@style/floating_action_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fal_margin_bottom"
        android:layout_marginEnd="@dimen/fal_margin_right"
        android:alpha="0"
        android:text="@string/fragment_friends_action_add_from_qr_code"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_add_from_clipboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_assignment_24"
        android:tint="@android:color/white"/>

    <com.aptasystems.kakapo.view.FloatingActionLabel
        android:id="@+id/floating_label_add_from_clipboard"
        style="@style/floating_action_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fal_margin_bottom"
        android:layout_marginEnd="@dimen/fal_margin_right"
        android:alpha="0"
        android:text="@string/fragment_friends_action_add_from_clipboard"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_add_from_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:alpha="0"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_keyboard_24"
        android:tint="@android:color/white"/>

    <com.aptasystems.kakapo.view.FloatingActionLabel
        android:id="@+id/floating_label_add_from_keyboard"
        style="@style/floating_action_bar_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/fal_margin_bottom"
        android:layout_marginEnd="@dimen/fal_margin_right"
        android:alpha="0"
        android:text="@string/fragment_friends_action_add_from_keyboard"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/baseline_add_24"
        android:tint="@android:color/white"
        app:layout_behavior=".behaviour.FloatingActionButtonBehaviour"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>